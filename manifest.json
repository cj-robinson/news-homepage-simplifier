{
  "manifest_version": 3,
  "name": "Iowa Capital Dispatch - Simplified",
  "description": "Simplify your view of the Iowa Capital Dispatch homepage.",
  "version": "1.21",
  "permissions": [
    "scripting",
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "https://iowacapitaldispatch.com/",
    "https://iowacapitaldispatch.com/?*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "icon.png",
        "redirect/redirect.html"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "icons": {
    "48": "icon.png"
  },
  "action": {
    "default_popup": "popup/popup.html"
  }
}